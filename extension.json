{
    "id": "ibm.devops.services.pipeline.workshop.extension.hello",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Build",
    "message_key": "ExtMessage",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "NAME",
            "type": "Text",
            "required": "true",
            "default_value": "Jacob",
            "label_key": "NAME_LABEL",
            "desc_key": "NAME_DESCRIPTION"
        },
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value" : "#!/bin/bash
# You can enter any extra script you'd care to here.  NAME has been defined above
echo \"Hello ${NAME}, I guess I should call this hello name and not world, huh?\"
",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
export NAME=#NAME#
set +x
set +e 
. $EXT_DIR/_init.sh
echo \"${label_color}Hello World! Hello ${red}${NAME}!${no_color}\"
/bin/bash -e #COMMAND#"
    }
    },
    "project": "https://github.com/jgarcows/extension_workshop",
    "project_contact": "jgarcows@us.ibm.com"
}
